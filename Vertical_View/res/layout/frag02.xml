    <ImageView
        android:id="@+id/monthcontent"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        
        android:src="@drawable/monthcontent_aug" />

</RelativeLayout>