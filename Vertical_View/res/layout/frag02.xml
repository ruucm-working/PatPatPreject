<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frag_callender"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9FD6D4"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:paddingTop="30dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/arrow02"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_toLeftOf="@+id/month"
            android:src="@drawable/button_arrow_left" />

        <ImageView
            android:id="@+id/arrow01"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/month"
            android:src="@drawable/button_arrow_right" />

        <ImageView
            android:id="@+id/month"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/month_october" />
        
        
        <ImageView
            android:id="@+id/add_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/button_add"
            android:layout_marginTop="50dp"  />
        
        
    </RelativeLayout>
