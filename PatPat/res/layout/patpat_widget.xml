<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/patview01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="false"
        android:src="@drawable/brick_question" />
    
     <ImageView
         android:id="@+id/patview_preload"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:adjustViewBounds="false"
         android:alpha="0"
         android:src="@drawable/brick_question" />

    <RelativeLayout
        android:id="@+id/girl_leg"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="false"
        android:background="#0000ff"
        android:padding="0dp" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/girl_body"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/girl_leg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="false"
        android:padding="0dp" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/girl_head"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/girl_body"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="false"
        android:background="#ff0000"
        android:padding="0dp" >
    </RelativeLayout>

</RelativeLayout>