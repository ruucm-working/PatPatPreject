package com.example.piccasoexamhandmade;

import android.os.Bundle;
import android.support.v7.app.ActionBarActivity;
import android.util.Log;
import android.view.View;
import android.widget.ImageView;
import android.widget.ProgressBar;

import com.squareup.picasso.Callback.EmptyCallback;
import com.squareup.picasso.Picasso;





public class picassoexam extends ActionBarActivity{ 

	
	ImageView imageView;
	ProgressBar progressBar;

	String currentUrl = "http://i.imgur.com/DvpvklR.png";
	
	 
	@Override 
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		
		Log.d("MainActivity","onCreate");
		
		setContentView(R.layout.loading);		 
		
		
		imageView = (ImageView) findViewById(R.id.image01);
		Log.d("picassoexam","imageView");
		
		Picasso.with(this).load(currentUrl).into(imageView);
		Log.d("picassoexam","Picasso");
		 
   
/*
		Picasso.with(this)   
		.load(currentUrl)
		.error(R.drawable.error_detail) 
		.into(imageView, new EmptyCallback() { 
			@Override public void onSuccess() {
				progressBar.setVisibility(View.GONE);
			}			
			@Override
			public void onError() {
				progressBar.setVisibility(View.GONE);
			}			 
		});
*/
		
		
		
		  
	

	}

}
