package info.androidhive.imageslider.helper;

import java.io.IOException;
import java.net.MalformedURLException;
import java.util.ArrayList;
import java.util.List;

import org.apache.http.HttpEntity;
import org.apache.http.HttpResponse;
import org.apache.http.client.HttpClient;
import org.apache.http.client.entity.UrlEncodedFormEntity;
import org.apache.http.client.methods.HttpPost;
import org.apache.http.impl.client.DefaultHttpClient;
import org.apache.http.message.BasicNameValuePair;
import org.apache.http.protocol.HTTP;
import org.apache.http.util.EntityUtils;

import android.os.AsyncTask;
import android.util.Log;

public class HttpPostAsyncTask extends AsyncTask<String, Integer, Long>
{
 @Override
 protected Long doInBackground(String... params) {
  String id = params[0];
  Log.d("HttpPostAsyncTask","params[0] "+params[0]);
  String password = params[1];
  String name = params[2];
  String phone = params[3];
  Log.d("HttpPostAsyncTask","params[3] "+params[3]);
  
  try {
   HttpClient client = new DefaultHttpClient();
   String postUrl = "http://ruucm.synology.me:5003/edit03.php";
   HttpPost post = new HttpPost(postUrl);
   
   //전송될 데이터 값
   List params2 = new ArrayList();
   params2.add(new BasicNameValuePair("a", a));
   params2.add(new BasicNameValuePair("b", b));
   params2.add(new BasicNameValuePair("c", c));
   params2.add(new BasicNameValuePair("d", d));
   params2.add(new BasicNameValuePair("e", e));
   params2.add(new BasicNameValuePair("f", f));
   params2.add(new BasicNameValuePair("g", g));
   params2.add(new BasicNameValuePair("h", h));
   params2.add(new BasicNameValuePair("i", i));
   params2.add(new BasicNameValuePair("j", j));
   params2.add(new BasicNameValuePair("k", k));
   params2.add(new BasicNameValuePair("l", l));
   params2.add(new BasicNameValuePair("m", m));
   params2.add(new BasicNameValuePair("n", n));
   params2.add(new BasicNameValuePair("o", o));
   

   UrlEncodedFormEntity ent = 
    new UrlEncodedFormEntity(params2,HTTP.UTF_8);
   post.setEntity(ent);
   HttpResponse responsePost = client.execute(post);
   HttpEntity resEntity = responsePost.getEntity();
   
   if (resEntity != null) {
    Log.w("Response", EntityUtils.toString(resEntity));
   }

  } catch (MalformedURLException e) {
   //
  } catch (IOException e) {
   //
  }
  return null;
 }
}